{
  "name": "Lexa",
  "description": "Your local AI translation language companion.",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "dist/ui/popup.html",
    "default_icon": "images/icon.png"
  },
  "icons": {
    "16": "images/icon.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "commands": {
    "open-sidepanel": {
      "suggested_key": {
        "default": "Ctrl+Shift+L",
        "mac": "Command+Shift+L"
      },
      "description": "Open the Lexa side panel"
    },
    "translate-marked-text": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Translate the marked text"
    }
  },
  "side_panel": {
    "default_path": "dist/ui/sidePanel.html"
  },
  "background": {
    "service_worker": "dist/ui/serviceWorker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "js": ["dist/content/content.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "permissions": ["tabs", "storage", "contextMenus", "sidePanel"]
}
